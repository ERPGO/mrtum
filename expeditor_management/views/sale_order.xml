<odoo>
    <data>
        <!-- Form view definition -->
        <record model="ir.ui.view" id="expeditor_management.sale_inherit_form">
            <field name="name">Expeditor inherit to Sale order view form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='sale_order_template_id']" position="after">
                        <field name="location_id" string="Customer Location"
                               domain="[['usage','=','customer']]"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>